                        android:text="@string/psbitestq3" />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/rb_psbipretestq3a1"
                            style="@style/RadioButton"
                            android:text="@string/psbitestq3a1" />

                        <RadioButton
                            android:id="@+id/rb_psbipretestq3a2"
                            style="@style/RadioButton"
                            android:text="@string/psbitestq3a2" />

                        <RadioButton
                            android:id="@+id/rb_psbipretestq3a3"
                            style="@style/RadioButton"
                            android:text="@string/psbitestq3a3" />

                        <RadioButton
                            android:id="@+id/rb_psbipretestq3a4"
                            style="@style/RadioButton"
                            android:text="@string/psbitestq3a4" />

                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/psbipretest4cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/psbipretest3cv"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">


                <LinearLayout
                    android:id="@+id/ll_psbipretestq4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_psbipretestq4"
